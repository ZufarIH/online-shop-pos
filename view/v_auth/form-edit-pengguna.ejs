<%- include('../v_layout/head') %>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <link rel="stylesheet" href="/css-tambahan/layout-login.css">
    <main class="form-signin w-100 m-auto">
        <form method="post" action="/auth/proses_edit">
          <img class="mb-4" src="/gambar/nc grad 1.jpg" alt="" width="72" height="72">
          <br>
          <% if (typeof notifikasi !== 'undefined') { %>
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= notifikasi %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% } %> 
          <!-- buat bikin notifikasi gagal masuk -->
          <h1 class="h3 mt-3 mb-3 fw-normal">Silahkan registrasi</h1>
      
          <div class="form-floating">
            <input type="nama_lengkap" class="form-control" name="form_namaLengkap" placeholder="fullname">
            <label for="floatingInput">Full name/Nama Lengkap</label>
          </div>
          <div class="form-floating">
            <input type="email" class="form-control" name="form_email" placeholder="name@example.com">
            <label for="floatingInput">Email address/Alamat email</label>
          </div>
          <div class="form-floating">
            <input type="email" class="form-control" name="form_alamat" placeholder="name@example.com">
            <label for="floatingInput">Email address/Alamat email</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="form_password" placeholder="Password">
            <label for="floatingPassword">Password/Kata sandi</label>
          </div>
      
          <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Remember me
            </label>
          </div>
          
          <button class="btn btn-primary w-100 py-2" type="submit">Edit Profil</button>
          <p class="mt-5 mb-3 text-body-secondary">&copy; 2017â€“2024</p>
        </form>
      </main>
</body>
<%- include('../v_layout/foot') %>